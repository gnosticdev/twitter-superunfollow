{
    "name": "Twitter SuperUnfollow",
    "description": "Unfollow profiles autotmatically, based on keyword.",
    "version": "0.10",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*/following"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },

    "sandbox": {
        "pages": ["sandbox.html"]
    },
    "action": {
        "default_title": "Twitter SuperUnfollow",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage", "sidePanel"],

    "host_permissions": ["https://*/*"]
}
