{
    "name": "Twitter SuperUnfollow",
    "description": "Unfollow profiles autotmatically, based on keyword.",
    "version": "0.10",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },

    "sandbox": {
        "pages": ["sandbox.html"]
    },
    "action": {
        "default_title": "Twitter SuperUnfollow",
        "default_popup": "newTab.html"
    },
    "permissions": ["tabs", "activeTab", "scripting", "storage", "sidePanel"],

    "host_permissions": ["https://*/*"],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js.map",
                "newTab.js.map",
                "service-worker.js.map",
                "style.css.map",
                "sandbox.js.map"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
