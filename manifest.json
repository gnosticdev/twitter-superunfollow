{
	"action": {
		"default_icon": {
			"16": "assets/icon16.png",
			"24": "assets/icon24.png",
			"48": "assets/icon48.png",
			"128": "assets/icon128.png"
		},
		"default_title": "Twitter SuperUnfollow"
	},
	"background": {
		"service_worker": "service-worker.js"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"chromeos": "Ctrl+B",
				"linux": "Ctrl+B",
				"mac": "Ctrl+B",
				"windows": "Ctrl+B"
			}
		},
		"reload-everything": {
			"description": "Reload the Twitter SuperUnfollow extension",
			"suggested_key": {
				"default": "Ctrl+B",
				"mac": "Command+B"
			}
		}
	},
	"content_scripts": [
		{
			"css": ["style.css"],
			"include_globs": ["*/following"],
			"js": ["main.js"],
			"matches": ["https://*.twitter.com/*", "https://*.x.com/*"]
		}
	],
	"description": "Unfollow profiles autotmatically, based on keyword.",
	"host_permissions": ["https://*/*"],
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"manifest_version": 3,
	"name": "Twitter SuperUnfollow",
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"storage",
		"sidePanel",
		"webNavigation"
	],
	"sandbox": {
		"pages": ["sandbox.html"]
	},
	"version": "0.10",
	"web_accessible_resources": [
		{
			"matches": ["<all_urls>"],
			"resources": [
				"main.js.map",
				"popup.js.map",
				"service-worker.js.map",
				"temp-tab.js.map",
				"style.css.map",
				"sandbox.js.map"
			]
		}
	]
}
