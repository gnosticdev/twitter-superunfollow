{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "outDir": "dist",
        "declaration": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "noEmit": true
    },
    "exclude": ["node_modules", "dist"]
}
